.container {
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
  padding: 0%;
}

.top-section {
  position: relative;
  width: 100%;
  height: 400rpx; /* 固定高度 */
  overflow: hidden;
}

.header-image {
  width: 750rpx; /* 固定宽度 */
  height: 400rpx; /* 固定高度 */
  display: block;
  object-fit: cover; /* 保持图片比例并覆盖整个区域 */
}

.bottom-section {
  padding: 20rpx;
  padding-right: 40rpx;
  background-color: #fff;
  margin-top: 100rpx;
  width: 90%;
}

.video-list-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.video-list {
  border-top: 1px solid #eee;
}

.video-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;
}

.video-index {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background-color: #ccc;
  color: #fff;
  border-radius: 50%;
  margin-right: 20rpx;
}

.video-info {
  flex: 1;
  display: flex;
  flex-direction: column; /* 垂直排列子元素 */
}

.video-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx; /* 两行之间的间距 */
}

.video-description {
  font-size: 28rpx;
  color: #999;
}

.watch-btn {
  background-color: #ff9900;
  color: #fff;
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
  font-size: 28rpx;
}